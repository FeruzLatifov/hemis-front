/**
 * HEMIS Design Tokens
 * Davlat tashkiloti standarti
 */

@layer base {
  :root {
    /* Colors - Sokin variant */
    --color-app-bg: 245 246 250;           /* #F5F6FA */
    --color-container: 255 255 255;        /* #FFFFFF */
    --color-primary: 47 128 237;           /* #2F80ED */
    --color-primary-hover: 38 102 190;     /* #2666BE */
    --color-primary-light: 191 213 245;    /* #BFD5F5 */
    --color-text-primary: 30 33 36;        /* #1E2124 */
    --color-text-secondary: 107 114 128;   /* #6B7280 */
    --color-border: 229 231 235;           /* #E5E7EB */
    --color-success: 39 174 96;            /* #27AE60 */
    --color-warning: 242 201 76;           /* #F2C94C */
    --color-danger: 235 87 87;             /* #EB5757 */
    
    /* Background variations */
    --color-hover-bg: 243 244 246;         /* #F3F4F6 */
    --color-active-bg: 47 128 237 / 0.12;  /* rgba(47,128,237,0.12) */
    
    /* Spacing */
    --spacing-xs: 4px;
    --spacing-sm: 8px;
    --spacing-md: 12px;
    --spacing-lg: 16px;
    --spacing-xl: 24px;
    --spacing-2xl: 32px;
    
    /* Border radius */
    --radius-sm: 4px;
    --radius-md: 6px;
    --radius-lg: 8px;
    
    /* Shadows - Engil */
    --shadow-sm: 0 1px 2px rgba(15, 23, 42, 0.04);
    --shadow-md: 0 2px 4px rgba(15, 23, 42, 0.06);
    --shadow-lg: 0 4px 8px rgba(15, 23, 42, 0.08);
    
    /* Typography */
    --font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    --font-size-xs: 12px;
    --font-size-sm: 13px;
    --font-size-md: 14px;
    --font-size-lg: 16px;
    --font-size-xl: 18px;
    --font-weight-regular: 400;
    --font-weight-medium: 500;
    --font-weight-semibold: 600;
    
    /* Layout */
    --sidebar-width-collapsed: 80px;
    --sidebar-width-expanded: 240px;
    --appbar-height: 64px;
  }
  
  .dark {
    --color-app-bg: 17 24 39;              /* #111827 */
    --color-container: 31 41 55;           /* #1F2937 */
    --color-primary: 47 128 237;           /* #2F80ED - o'zgarmaydi */
    --color-primary-hover: 38 102 190;     /* #2666BE */
    --color-text-primary: 249 250 251;     /* #F9FAFB */
    --color-text-secondary: 156 163 175;   /* #9CA3AF */
    --color-border: 55 65 81;              /* #374151 */
    --color-hover-bg: 55 65 81;            /* #374151 */
  }
}

