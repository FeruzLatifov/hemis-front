# ============================================
# HEMIS Ministry Frontend - Environment Variables
# ============================================
# Copy this file to .env and fill in the values:
#   cp .env.example .env
#
# Only variables prefixed with VITE_ are exposed to the browser.
# Never commit .env files to version control.
# ============================================

# --- Required ---

# Backend API base URL (no trailing slash)
VITE_API_URL=http://localhost:8081

# --- Optional (defaults provided) ---

# Application display name
VITE_APP_NAME=HEMIS Ministry

# Application version (shown in footer)
VITE_APP_VERSION=1.0.0

# --- Sentry Error Tracking ---

# Enable Sentry integration ("true" or "false")
VITE_SENTRY_ENABLED=false

# Sentry DSN from your Sentry.io project settings
VITE_SENTRY_DSN=

# Sentry environment tag (e.g., development, staging, production)
VITE_SENTRY_ENVIRONMENT=development

# Sentry release tag (auto-generated if empty)
VITE_SENTRY_RELEASE=

# Performance monitoring sample rate (0.0 to 1.0)
VITE_SENTRY_TRACES_SAMPLE_RATE=0.2

# Session replay sample rates (0.0 to 1.0)
VITE_SENTRY_REPLAY_SESSION_SAMPLE_RATE=0.1
VITE_SENTRY_REPLAY_ERROR_SAMPLE_RATE=1.0
